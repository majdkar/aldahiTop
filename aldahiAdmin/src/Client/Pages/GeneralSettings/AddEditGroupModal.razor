@inject Microsoft.Extensions.Localization.IStringLocalizer<Groups> _localizer

<EditForm Model="@AddEditGroupModel" OnValidSubmit="SaveAsync" dir="@direction">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            @{
                if (AddEditGroupModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @_localizer["Add Group"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @_localizer["Update Group"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if (AddEditGroupModel.Id != 0)
                {
                    <MudItem xs="12" md="6">
                        <MudTextField Disabled For="@(() => AddEditGroupModel.Id)" @bind-Value="AddEditGroupModel.Id" Label="@_localizer["Id"]" />
                        </MudItem>
                }
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(()=>AddEditGroupModel.NameAr)" @bind-Value="AddEditGroupModel.NameAr" Label="@_localizer["NameAr"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(()=>AddEditGroupModel.NameEn)" @bind-Value="AddEditGroupModel.NameEn" Label="@_localizer["NameEn"]" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">@_localizer["Cancel"]</MudButton>
            @if (AddEditGroupModel.Id != 0)
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@_localizer["Update"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Secondary"></LoadingButton>
            }
            else
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@_localizer["Save"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success"></LoadingButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>