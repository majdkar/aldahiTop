@inject Microsoft.Extensions.Localization.IStringLocalizer<Menus> localizer

<EditForm Model="@MenuTranslationModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator />

    <MudDialog>
        <TitleContent>
            @{
                if (MenuTranslationModel.Id == 0)
                    {
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                    @localizer["AddTranslation"]
                </MudText>
                }
                    else
                    {
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                    @localizer["UpdateTransalation"]
                </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>

                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => MenuTranslationModel.Name)" @bind-Value="MenuTranslationModel.Name" Label="@localizer["Name"]" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <LanguageSelector Language="@MenuTranslationModel.Language" @ref="languageSelector"></LanguageSelector>
                </MudItem>


                <MudItem xs="12" md="6">
                    <MudCheckBox For="@(() => MenuTranslationModel.IsActive)" @bind-Checked="MenuTranslationModel.IsActive" Label="@localizer["IsActive"]" />
                </MudItem>
                                <MudItem xs="12" md="12">
                    <Editor Conf="@Constants.editorConf" JsConfSrc="tinyMceConf" ApiKey=@Constants.TinyMceApiKey Field=@(() => MenuTranslationModel.HtmlText) @bind-Value="MenuTranslationModel.HtmlText" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @if (MenuTranslationModel.Id != 0)
                    {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Update"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary"></LoadingButton>
            }
                    else
                    {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Save"]"k DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success"></LoadingButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>