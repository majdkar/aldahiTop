@page "/menus/{CategoryId}"
@using FirstCall.Shared.ViewModels.Menus

@inject Microsoft.Extensions.Localization.IStringLocalizer<Menus> localizer

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>
<style>
    .mud-dialog-container {
        overflow: scroll;
    }

    .tox-tinymce {
        max-height: 250px;
    }
</style>
<MudText Typo="Typo.h6" Color="Color.Primary">@localizer["Menus"] </MudText>

<MudTable Class="my-4" Elevation="4" ServerData="@(new Func<TableState, Task<TableData<MenuViewModel>>>(ServerReload))"
          Hover="true" @ref="_table" Breakpoint="Breakpoint.Sm" Loading="@loaded" LoadingProgressColor="Color.Primary"
          OnRowClick="RowClickEvent" T="MenuViewModel">

    <ToolBarContent>
        <div class="justify-center mud-text-align-center">
            @if (_canCreateMenu && _canDeleteMenu)
            {
                <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" @onclick="@(() => InvokeAddEditModal(0))" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface">@localizer["New"] </MudButton>
            }

            @if (MenuId != 0)
            {
                <MudButton DisableElevation Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.ArrowBack" @onclick="@(() => InvokeBackModal(0))" IconColor="Color.Surface" Color="Color.Surface">@localizer["MasterMenu"] </MudButton>
            }
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="@(() => OnSearch(""))" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@localizer["Reload"] </MudButton>



        </div>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder=@localizer["Search"] Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>

    <HeaderContent>
        <MudTd DataLabel="LevelOrder"><strong>@localizer["LevelOrder"]</strong></MudTd>
        <MudTh><MudTableSortLabel T="MenuViewModel" SortLabel="Name"><strong>@localizer["Name"] </strong></MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="MenuViewModel" SortLabel="EnglishName"><strong>@localizer["EnglishName"] </strong></MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="MenuViewModel" SortLabel="Type"><strong>@localizer["Type"]</strong> </MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="MenuViewModel" SortLabel="Type"><strong>@localizer["Parent Menu"]</strong> </MudTableSortLabel></MudTh>

        <MudTd DataLabel="Image"><strong>@localizer["Image"]</strong></MudTd>
        @*<MudTd DataLabel="File"><strong>@localizer["File"]</strong></MudTd>*@

        <MudTd DataLabel="IsActive"><strong>@localizer["IsActive"] </strong></MudTd>
        <MudTh Style="text-align:right"><strong>@localizer["Actions"]</strong> </MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="LevelOrder">
            <MudHighlighter Text="@context.LevelOrder.ToString()" />
        </MudTd>
        <MudTd DataLabel="Name">
            <MudHighlighter Text="@context.Name" HighlightedText="@searchString" />
        </MudTd>
        <MudTd DataLabel="EnglishName">
            <MudHighlighter Text="@context.EnglishName" HighlightedText="@searchString" />
        </MudTd>
        <MudTd DataLabel="Type">
            <MudHighlighter Text="@context.Type" HighlightedText="@searchString" />
        </MudTd>
        <MudTd DataLabel="ParentName">
            <MudHighlighter Text="@context.ParentName" HighlightedText="@searchString" />
        </MudTd>
        @if (!String.IsNullOrEmpty(context.Image1))
        {
            <MudTd DataLabel="Image">
                <MudIconButton Icon="@Icons.Material.Filled.ImageSearch" Color="Color.Secondary" Link=@(@context.Image1) @onclick:stopPropagation Target="_blank"></MudIconButton>
            </MudTd>
        }
        else
        {
            <MudTd DataLabel="Image">
                <MudText>No Image</MudText>
            </MudTd>
        }
        @*  @if (!String.IsNullOrEmpty(context.File))
        {
        <MudTd DataLabel="File">
        <MudIconButton Icon="@Icons.Material.Filled.FileDownload" Color="Color.Primary" Link=@(@context.File) @onclick:stopPropagation Target="_blank"></MudIconButton>
        </MudTd>
        }
        else
        {
        <MudTd DataLabel="File">
        <MudText>No File</MudText>
        </MudTd>
        }*@


        <MudTd DataLabel="Active?"><MudCheckBox Disabled="true" @bind-Checked="@context.IsActive" Color="Color.Secondary"></MudCheckBox></MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right">
            <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() => InvokeAddEditModal(@context.Id))">@localizer["Edit"]</MudButton>

            @if (@context.Type == "Drop Down Menu")
            {
                <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() => InvokeMenuSubModal(@context.Id))">@localizer["MenusSub"]</MudButton>
            }
            @if (_canDeleteMenu)
            {
                <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" @onclick="@(() => SoftDeleteMenu(@context.Id))">@localizer["Delete"]</MudButton>
            }

        </MudTd>
    </RowTemplate>
    <PagerContent>
        <TablePager />
    </PagerContent>

</MudTable>


                 