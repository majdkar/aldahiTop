@inject Microsoft.Extensions.Localization.IStringLocalizer<Menus> localizer

<EditForm Model="@MenuCategoryModel" OnValidSubmit="SaveAsync" dir="@direction">
    <FluentValidationValidator />

    <MudDialog>
        <TitleContent>
            @{
                if (MenuCategoryModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @localizer["AddMenuCategory"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @localizer["UpdateMenuCategory"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>

                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => MenuCategoryModel.Name)" @bind-Value="MenuCategoryModel.Name" Label="@localizer["Arabic Name"]" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => MenuCategoryModel.EnglishName)" @bind-Value="MenuCategoryModel.EnglishName" Label="@localizer["English Name"]" />
                </MudItem>



                <MudItem xs="12" md="12">
                    <MudCheckBox For="@(() => MenuCategoryModel.IsActive)" @bind-Checked="MenuCategoryModel.IsActive" Label="@localizer["IsActive"]" />
                </MudItem>


                <MudItem xs="12" md="12">
                    <MudCheckBox For="@(() => MenuCategoryModel.IsVisableUser)" @bind-Checked="MenuCategoryModel.IsVisableUser" Label="@localizer["IsVisible User"]" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @if (MenuCategoryModel.Id != 0)
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Update"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary"></LoadingButton>
            }
            else
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Save"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success"></LoadingButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>