@page "/block-categories"
@using FirstCall.Shared.ViewModels.Blocks;
@inject Microsoft.Extensions.Localization.IStringLocalizer<Blocks> localizer

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>

<MudText Typo="Typo.h6" Color="Color.Primary">@localizer["BlockCategoriesDescription"] </MudText>


<MudTable Class="my-4" Elevation="4" ServerData="@(new Func<TableState, Task<TableData<BlockCategoryViewModel>>>(ServerReload))"
          Hover="true" @ref="_table" Breakpoint="Breakpoint.Sm" Loading="@loaded" LoadingProgressColor="Color.Primary"
          OnRowClick="RowClickEvent" T="BlockCategoryViewModel">

    <ToolBarContent>
        <div class="justify-center mud-text-align-center">
            <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" @onclick="@(() => InvokeAddEditModal(0))" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface">@localizer["New"] </MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="@(() => OnSearch(""))" StartIcon="@Icons.Material.Filled.Refresh" IconColor="Color.Surface" Color="Color.Secondary">@localizer["Reload"] </MudButton>
        </div>
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder=@localizer["Search"] Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>

    <HeaderContent>
        <MudTh><MudTableSortLabel T="BlockCategoryViewModel" SortLabel="Name"><strong>@localizer["Name"] </strong></MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="BlockCategoryViewModel" SortLabel="EnglishName"><strong>@localizer["EnglishName"]</strong> </MudTableSortLabel></MudTh>
      <MudTh><MudTableSortLabel T="BlockCategoryViewModel" SortLabel="BlockType"><strong>@localizer["BlockType"]</strong> </MudTableSortLabel></MudTh>

        <MudTd DataLabel="IsActive"><strong>@localizer["IsActive"]</strong> </MudTd>
        <MudTh Style="text-align:right"><strong>@localizer["Actions"] </strong></MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Name">
            <MudHighlighter Text="@context.Name" HighlightedText="@searchString" />
        </MudTd>
   <MudTd DataLabel="Name">
            <MudHighlighter Text="@context.EnglishName" HighlightedText="@searchString" />
        </MudTd>
        <MudTd DataLabel="Block Type">
            <MudHighlighter Text="@context.BlockType" HighlightedText="@searchString" />
        </MudTd>
        <MudTd DataLabel="Active?"><MudCheckBox Disabled="true" @bind-Checked="@context.IsActive" Color="Color.Secondary"></MudCheckBox></MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right">
            <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() => InvokeAddEditModal(@context.Id))">@localizer["Edit"]</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() =>  _navigationManager.NavigateTo($"/blocks/{@context.Id}"))">@localizer["ViewBlocks1"]</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" @onclick="@(() => SoftDeleteBlockCategory(@context.Id))">@localizer["Delete"]</MudButton>
        </MudTd>
    </RowTemplate>

    <PagerContent>
        <TablePager />
    </PagerContent>

</MudTable>

