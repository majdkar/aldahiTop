                <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() => InvokeAddEditBlockPhotos(@context.Id))">@localizer["Album"]</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() => InvokeAddEditBlockAttachements(@context.Id))">@localizer["Attachements"]</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Info" Size="Size.Small" @onclick="@(() => InvokeAddEditBlockVideos(@context.Id))">@localizer["Videos"]</MudButton>
            @*}*@
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <TablePager />
    </PagerContent>

</MudTable>


