
@inject Microsoft.Extensions.Localization.IStringLocalizer<Blocks> localizer

<EditForm Model="@BlockCategoryTranslationModel" OnValidSubmit="SaveAsync">
  <FluentValidationValidator />

    <MudDialog>
        <TitleContent>
            @{
                if (BlockCategoryTranslationModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @localizer["AddTranslation"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @localizer["UpdateTransalation"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => BlockCategoryTranslationModel.Name)" @bind-Value="BlockCategoryTranslationModel.Name" Label="@localizer["Name"]" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => BlockCategoryTranslationModel.Description)" @bind-Value="BlockCategoryTranslationModel.Description" Label="@localizer["Description"]" />

                <MudItem xs="12" md="6">
                    <LanguageSelector Language="@BlockCategoryTranslationModel.Language" @ref="languageSelector"></LanguageSelector>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => BlockCategoryTranslationModel.Slug)" @bind-Value="BlockCategoryTranslationModel.Slug" Label="@localizer["Slug"]" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudCheckBox For="@(() => BlockCategoryTranslationModel.IsActive)" @bind-Checked="BlockCategoryTranslationModel.IsActive" Label="@localizer["IsActive"]" />
                </MudItem>
                                </MudItem>
                                <MudItem xs="12" md="12">
                    <Editor Conf="@Constants.editorConf" JsConfSrc="tinyMceConf" ApiKey=@Constants.TinyMceApiKey Field=@(() => BlockCategoryTranslationModel.Description) @bind-Value="BlockCategoryTranslationModel.Description" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @if (BlockCategoryTranslationModel.Id != 0)
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Update"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary"></LoadingButton>
            }
            else
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Save"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success"></LoadingButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>