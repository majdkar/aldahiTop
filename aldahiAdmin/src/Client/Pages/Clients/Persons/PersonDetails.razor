@page "/person-details/{Id:int}"
@using FirstCall.Shared.Constants.Clients
@inject Microsoft.Extensions.Localization.IStringLocalizer<AddEditPerson> _localizer

<HeroTitle Title="@PersonModel.FullName" />
@if (!_loaded)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudTabs Elevation="25" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text=@_localizer["Client Details"]>
            <PersonClientBasicInfo Model="PersonModel" />
        </MudTabPanel>
        <MudTabPanel Text=@_localizer["B2B My Orders"]>
            <FirstCall.Client.Pages.Deliveries.HomeDeliveryOrdersClient  ClientId="PersonModel.ClientId" />
        </MudTabPanel>    
        <MudTabPanel Text=@_localizer["B2C My Orders"]>
            <FirstCall.Client.Pages.Deliveries.HomeB2CDeliveryOrdersByClient  ClientId="PersonModel.ClientId" />
        </MudTabPanel>
       @*  <MudTabPanel Text=@_localizer["RFQ"]>
            <PriceOffers ClientId="PersonModel.ClientId" />
        </MudTabPanel>
        <MudTabPanel Text=@_localizer["Urgent Orders"]>
            <UrgentOrders ClientId="PersonModel.ClientId" />
        </MudTabPanel> *@
    </MudTabs>
}