@inject Microsoft.Extensions.Localization.IStringLocalizer<Events> localizer

<EditForm Model="@EventTranslationModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator />

    <MudDialog>
        <TitleContent>
            @{
                if (EventTranslationModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @localizer["AddTranslation"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                        @localizer["UpdateTransalation"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => EventTranslationModel.Name)" @bind-Value="EventTranslationModel.Name" Label="@localizer["Name"]" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => EventTranslationModel.Place)" @bind-Value="EventTranslationModel.Place" Label="@localizer["Place"]" />
                </MudItem>



                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => EventTranslationModel.Slug)" @bind-Value="EventTranslationModel.Slug" Label="@localizer["Slug"]" />
                </MudItem>

               <MudItem xs="12" md="6">
                    <LanguageSelector Language="@EventTranslationModel.Language" @ref="languageSelector"></LanguageSelector>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudCheckBox For="@(() => EventTranslationModel.IsActive)" @bind-Checked="EventTranslationModel.IsActive" Label="@localizer["IsActive"]" />
                </MudItem>
                                                                <MudItem xs="12" md="12">
                    <Editor Conf="@Constants.editorConf" JsConfSrc="tinyMceConf" ApiKey=@Constants.TinyMceApiKey Field=@(() => EventTranslationModel.Description) @bind-Value="EventTranslationModel.Description" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @if (EventTranslationModel.Id != 0)
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Update"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary"></LoadingButton>
            }
            else
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Save"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success"></LoadingButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>