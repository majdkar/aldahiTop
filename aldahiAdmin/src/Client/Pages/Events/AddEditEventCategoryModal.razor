@inject Microsoft.Extensions.Localization.IStringLocalizer<Events> localizer

<EditForm Model="@EventCategoryModel" OnValidSubmit="SaveAsync">
  <FluentValidationValidator />
   
   <MudDialog>
        <TitleContent>
            @{
                if (EventCategoryModel.Id == 0)
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                        @localizer["AddEventCategory"]
                    </MudText>
                }
                else
                {
                    <MudText Typo="Typo.h6">
                        <MudIcon Icon="@Icons.Material.Filled.Update" Class="mr-3 mb-n1" />
                       @localizer["UpdateEventCategory"]
                    </MudText>
                }
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => EventCategoryModel.Name)" @bind-Value="EventCategoryModel.Name" Label="@localizer["Arabic Name"]" />
                </MudItem>
                                <MudItem xs="12" md="6">
                    <MudTextField For="@(() => EventCategoryModel.EnglishName)" @bind-Value="EventCategoryModel.EnglishName" Label="@localizer["English Name"]" />
                </MudItem>
                

                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => EventCategoryModel.Description)" @bind-Value="EventCategoryModel.Description" Label="@localizer["Arabic Description"]" />
                </MudItem>
                                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => EventCategoryModel.EnglishDescription)" @bind-Value="EventCategoryModel.EnglishDescription" Label="@localizer["English Description"]" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField For="@(() => EventCategoryModel.RecordOrder)" @bind-Value="EventCategoryModel.RecordOrder" Label="@localizer["RecordOrder"]" Variant="Variant.Outlined" Min="0" />
                    
                </MudItem>

                <MudItem xs="12" md="6" hidden>
                    <MudItem>
                        <InputFile id="imageInput" OnChange="SelectImage" hidden />
                        <MudButton id="imageInputButton"
                                   HtmlTag="label"
                                   Variant="Variant.Filled"
                                   Color="Color.Secondary"
                                   StartIcon="@Icons.Filled.CloudUpload"
                                   for="imageInput">
                            @localizer["UploadImage"]
                        </MudButton>
                        @if (_images != null)
                        {
                            <MudList id="ImagesList">
                                @foreach (var image in _images)
                                {
                                    <MudListItem Icon="@Icons.Filled.AttachFile" @key="@image">
                                        @image.Name
                                    </MudListItem>
                                }
                            </MudList>
                        }
                    </MudItem>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudCheckBox For="@(() => EventCategoryModel.IsActive)" @bind-Checked="EventCategoryModel.IsActive" Label="@localizer["IsActive"]" />
                </MudItem>

            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="Cancel">@localizer["Cancel"]</MudButton>
            @if (EventCategoryModel.Id != 0)
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Update"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Secondary"></LoadingButton>
            }
            else
            {
                <LoadingButton IsProcessing="@isProcessing" ButtonText="@localizer["Save"]" DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success"></LoadingButton>
            }
        </DialogActions>
    </MudDialog>
</EditForm>