    <MudTabPanel Text=@_localizer["Pending DeliveryOrders"] BadgeDot=true BadgeColor=Color.Secondary>
        <DeliveryOrdersByClient ClientId="@ClientId" ProductType="B2B" Status=@OrderStatusEnum.Pending.ToString()  />
